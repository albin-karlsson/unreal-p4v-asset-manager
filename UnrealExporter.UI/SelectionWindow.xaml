<Window x:Class="UnrealExporter.UI.SelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UnrealExporter.UI"
        mc:Ignorable="d"
        Title="Selection" Height="auto" Width="500" Background="#121212" ResizeMode="NoResize"
        Icon="/Images/icon.png">
    <Grid>
        <!-- Define the Row and Column definitions for layout -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Create ListView with padding and centered -->
        <ListView Name="lstSelection" Grid.Row="0" Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center" Width="460" SelectionChanged="lstSelection_SelectionChanged"/>

        <!-- Create buttons below the ListView -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
            <Button Content="OK" Width="100" Height="40" Margin="10" Background="#a19faf" Foreground="White" Click="Button_Click"/>
            <Button Content="Cancel" Width="100" Height="40" Margin="10" Background="#FF7043" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
